@using System.Globalization
@model ISRPO_LR1.Domain.Grade
@{
    ViewBag.Title = "Создание оценки";
}

@using (Html.BeginForm("Create", "Grades", FormMethod.Post, new {@class = "form-horizontal d-flex flex-column w-100", id = "formData", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h4 class="d-flex justify-content-center">
        @ViewBag.Title
    </h4>
    <hr/>
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="form-group mb-1">
        @Html.LabelFor(m => m.g_value, new {@class = "col-md-2 form-label w-100"})
        <div class="col-md-10 w-100">
            @Html.DropDownListFor(u => u.g_value, new SelectList(new string[]
            {
                "1", "2", "3", "4", "5"
            }, new CultureInfo("ru-RU").TextInfo.ToTitleCase("Не выбрано")), new {@class = "form-control w-100"})
        </div>
    </div>
    <div class="form-group mb-1">
        @Html.LabelFor(m => m.g_value, new {@class = "col-md-2 form-label w-100"})
        <div class="col-md-10 w-100">
            @Html.DropDownListFor(u => u.g_value, new SelectList(ViewBag.Students, new CultureInfo("ru-RU").TextInfo.ToTitleCase("Не выбрано")), new {@class = "form-control w-100"})
        </div>
    </div>
    <div class="form-group mb-1">
        @Html.LabelFor(m => m.g_value, new {@class = "col-md-2 form-label w-100"})
        <div class="col-md-10 w-100">
            @Html.DropDownListFor(u => u.g_value, new SelectList(ViewBag.Subjects, new CultureInfo("ru-RU").TextInfo.ToTitleCase("Не выбрано")), new {@class = "form-control w-100"})
        </div>
    </div>
    <div class="form-group mb-1 d-flex justify-content-center">
        <input id="submit" type="submit" class="btn btn-success w-100" value="Сохранить"/>
    </div>
}
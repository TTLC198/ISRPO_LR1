@using BeautySchool.Extensions
<!DOCTYPE html>
<html lang="ru" class="h-100">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title - Университет</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/mdi/css/materialdesignicons.min.css" asp-append-version="true"/>
</head>
<body class="d-flex flex-column h-100">
<header class="header">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-light box-shadow">
        <div class="container-fluid">
            <a class="navbar-brand text-light mb-0 h1" asp-area="" asp-controller="Subjects" asp-action="Index">Предметы</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="@Html.IsSelected("Grades", "Index", "nav-item")">
                        <a class="nav-link text-light" href="@Url.Action("Index", "Grades")">Оценки</a>
                    </li>
                    <li class="@Html.IsSelected("Subjects", "Index", "nav-item")">
                        <a class="nav-link text-light" href="@Url.Action("Index", "Subjects")">Предметы</a>
                    </li>
                    <li class="@Html.IsSelected("Students", "Index", "nav-item")">
                        <a class="nav-link text-light" href="@Url.Action("Index", "Students")">Студенты</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="flex-shrink-0">
    <div class="container">
        @RenderBody()
    </div>
</main>

<footer class="footer mt-auto py-3">
    <div class="container text-center">
        <span class="text-muted">
            &copy; @DateTime.Now.Year - by ttlc
        </span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
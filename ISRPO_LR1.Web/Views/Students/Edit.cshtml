@model ISRPO_LR1.Domain.Service.ServiceResponseModel<ISRPO_LR1.Domain.Student>
@{
    ViewBag.Title = "Редактирование студента";
}

@using (Html.BeginForm("Edit", "Students", FormMethod.Post, new {@class = "form-horizontal d-flex flex-column w-100", id="formData", role = "form"}))
{
    @Html.AntiForgeryToken()
    <h4 class="d-flex justify-content-center">
        @ViewBag.Title
    </h4>
    <hr/>
    @Html.ValidationSummary("", new {@class = "text-danger"})
    <div class="form-group mb-1">
        @Html.LabelFor(m => m.Item.s_email, new {@class = "col-md-2 form-label w-100"})
        <div class="col-md-10 w-100">
            @Html.TextBoxFor(m => m.Item.s_email, new {@class = "form-control w-100"})
        </div>
    </div>
    <div class="form-group mb-1">
        @Html.LabelFor(m => m.Item.s_birth_date, new {@class = "col-md-2 form-label w-100"})
        <div class="col-md-10 w-100">
            @Html.TextAreaFor(m => m.Item.s_birth_date, new {@class = "form-control w-100"})
        </div>
    </div>
    <div class="form-group mb-1">
        @Html.LabelFor(m => m.Item.s_full_name, new {@class = "col-md-2 form-label w-100"})
        <div class="col-md-10 w-100">
            @Html.TextAreaFor(m => m.Item.s_full_name, new {@class = "form-control w-100"})
        </div>
    </div>
    <div class="form-group mb-1 d-flex justify-content-center">
        <input id="submit" type="submit" class="btn btn-success w-100" value="Сохранить"/>
    </div>
}
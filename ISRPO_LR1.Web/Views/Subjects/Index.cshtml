@model ISRPO_LR1.Domain.Service.ServiceResponseModel<ISRPO_LR1.Web.Models.ViewModels.BaseIndexViewModel<ISRPO_LR1.Domain.Subject>>

<div class="panel-group">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4 class="d-flex justify-content-center">
                @ViewBag.Title
            </h4>
            <hr/>
        </div>
        <div class="panel-body">
            @if (Model.Success)
            {
                var row = 1;

                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Имя</th>
                        <th scope="col">Кол-во часов</th>
                        <th scope="col">Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var subject in Model.Item.Items)
                    {
                        <tr onclick="location.href='@Url.Action("Get", "Subjects", new {id = subject.sj_id, returnUrl = Context.Request.Path.Value,})'">
                            <th>@(row++)</th>
                            <th>@subject.sj_name</th>
                            <th>@subject.sj_hours</th>
                            <th>
                                <div class="mb-1 d-flex justify-content-between w-100">
                                    <a class="btn btn-success w-100 m-1" href="@Url.Action("Edit", "Subjects", new {id = subject.sj_id, returnUrl = Context.Request.Path.Value,})">
                                        <span class="mdi mdi-pencil-outline"></span>
                                    </a>
                                    <a class="btn btn-danger w-100 m-1" href="@Url.Action("Delete", "Subjects", new {id = subject.sj_id, returnUrl = Context.Request.Path.Value,})">
                                        <span class="mdi mdi-trash-can-outline"></span>
                                    </a>
                                </div>
                            </th>
                        </tr>
                    }
                    </tbody>
                </table>

                <a class="btn btn-success w-100 m-1" href="@Url.Action("Create", "Subjects", new {returnUrl = Context.Request.Path.Value,})">
                    <span class="mdi mdi-plus"></span>
                </a>
            }
            else
            {
                <div class="media">
                    <h2>Произошла ошибка!</h2>
                    <h5>@Model.Error</h5>
                </div>
            }
        </div>
    </div>
</div>